// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Member {
  id String @id
  name String
  email String @unique
  activityStatus ActivityStatus @relation(fields: [activityStatusId], references: [id])
  activityStatusId String
  pairId String
  exercise ExerciseOnMember[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActivityStatus {
  id String @id
  name String @unique
  isDefault Boolean
  member Member[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pair {
  id String @id
  name String
  team Team @relation(fields: [teamId], references: [id])
  teamId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([name, teamId])
}

model Team {
  id String @id
  name String @unique
  pair Pair[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Exercise {
  id String @id
  title String @unique
  description String
  exerciseGroup ExerciseGroup @relation(fields: [exerciseGroupId], references: [id])
  exerciseGroupId String
  member ExerciseOnMember[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExerciseGroup {
  id String @id
  name String @unique
  exercise Exercise[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExerciseOnMember {
  member Member @relation(fields: [memberId], references: [id])
  memberId String
  exercise Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId String
  progressStatus ProgressStatus @relation(fields: [progressStatusId], references: [id])
  progressStatusId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([memberId, exerciseId])
}

model ProgressStatus {
  id String @id
  name String @unique
  isDefault Boolean
  exerciseOnMember ExerciseOnMember[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
